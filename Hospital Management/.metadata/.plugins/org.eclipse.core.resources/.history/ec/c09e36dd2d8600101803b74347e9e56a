package com.wipro.venu.kafka;


import org.springframework.kafka.annotation.KafkaListener;
import org.springframework.stereotype.Service;

import com.wipro.venu.dto.AppointmentEvent;
import com.wipro.venu.service.EmailService;

import lombok.RequiredArgsConstructor;
import lombok.extern.slf4j.Slf4j;

@Slf4j
@Service
@RequiredArgsConstructor
public class AppointmentEventConsumer {

    private final EmailService emailService;

    @KafkaListener(topics = "appointment-events", groupId = "notification-service")
    public void consume(AppointmentEvent event) {
        log.info("ðŸ“© Received Appointment Event: {}", event);

        // send email based on status
        if (event.getStatus().name().equals("BOOKED")) {
            emailService.sendEmail(
                    event.getPatientEmail(),
                    "Appointment Confirmation",
                    "Dear Patient, your appointment is booked for " + event.getAppointmentDate()
            );
        } else if (event.getStatus().name().equals("CANCELLED")) {
            emailService.sendEmail(
                    event.getPatientEmail(),
                    "Appointment Cancelled",
                    "Dear Patient, your appointment scheduled for " + event.getAppointmentDate() + " has been cancelled."
            );
        }
    }
}


package com.wipro.venu.kafka;


import org.springframework.kafka.annotation.KafkaListener;
import org.springframework.stereotype.Component;

import com.fasterxml.jackson.databind.ObjectMapper;
import com.wipro.venu.dto.AppointmentEvent;
import com.wipro.venu.service.EmailService;

import lombok.RequiredArgsConstructor;
import lombok.extern.slf4j.Slf4j;

@Slf4j
@Component
@RequiredArgsConstructor
public class AppointmentEventConsumer {

    private final EmailService emailService;
    private final ObjectMapper objectMapper = new ObjectMapper();

    @KafkaListener(topics = "appointment-events", groupId = "notification-service")
    public void consume(String message) {
        try {
            AppointmentEvent event = objectMapper.readValue(message, AppointmentEvent.class);
            log.info("üì© Received Appointment Event: {}", event);

            // send email
            emailService.sendAppointmentNotification(event);

        } catch (Exception e) {
            log.error("‚ùå Failed to process event: {}", message, e);
        }
    }
}
